doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title DoTerra Oil Page Display
        link(rel="stylesheet", href="/styles/style2.css")

    body.container
        div.container
            each oil in oils 
                div.container
                    h1 #{oil.name}
                    img.img(src=oil.imagelink width='200px')
                    h3 Description: #{oil.description}
                    h4 Aroma: #{oil.aroma}
                    h4 Plant: #{oil.plant}
                    h3 Uses: #{oil.uses}
                    h4 Directions for use: #{oil.directions}
                    h3 Wholesale Price: $#{oil.wholesale}
                    h3 Retail Price: $#{oil.retail}

        a(href="/") 
            button.button(type="reset") Click for Another Oil Search
        a 

       

            